package com.project.run;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Scanner;

public class InsertRun {

	public static void main(String[] args) {
		Connection conn = null;
		Statement stmt = null;
		int rset = 0;
		// EMP_NO, EMP_NAME, EMP_NO, EMAIL,
		// PHONE, DEPT_CODE, JOB_CODE, SAL_LEVEL
		// SALARY, BONUS, MANAGER_ID, HIRE_DATE
		// ENT_DATE, ENT_YN
		Scanner sc = new Scanner(System.in);

		System.out.println("사원 번호를 입력해주세요.");
		String empId = sc.nextLine();
		System.out.println("직원명을 입력해주세요.");
		String empName = sc.nextLine();
		System.out.println("주민등록번호를 입력해주세요.");
		String empNo = sc.nextLine();
		System.out.println("이메일을 입력해주세요.");
		String empEmail = sc.nextLine();
		System.out.println("전화번호를 입력해주세요.");
		String empPhone = sc.nextLine();
		System.out.println("부서코드를 입력해주세요.");
		String deptCode = sc.nextLine();
		System.out.println("직급코드를 입력해주세요.");
		String jobCode = sc.nextLine();
		System.out.println("급여등급을 입력해주세요.");
		String salCode = sc.nextLine();
		System.out.println("급여를 입력해주세요.");
		int salary = sc.nextInt();
		sc.nextLine();
		System.out.println("보너스율을 입력해주세요.");
		Double bonus = sc.nextDouble();
		sc.nextLine();
		System.out.println("관리자 사번을 입력해주세요.");
		String managerId = sc.nextLine();
		System.out.println("재직여부를 입력해주세요.");
		// 아직 못만듬.

		String insert = """
				INSERT
				  INTO
					   EMPLOYEE
				VALUES
					   (
					   226
					 , '김하늘'
					 , '011019-3175871'
					 , 'nosaru@naver.com'
					 , '01063904376'
					 , 'D7'
					 , 'J7'
					 , 'S5'
					 , 5000000
					 , 0.1
					 , '201'
					 , SYSDATE
					 , ''
				 	 , 'Y'
					 )
					""";
		insert = "INSERT "
				 + "INTO " 
				 	   + "EMPLOYEE " 
				 + "VALUES "
				 	   + "("
				 	   + empId 
				 	   + ",'" + empName + "'"
				 	   + ",'" + empNo + "'"
				 	   + ",'" + empEmail + "'"
				 	   + ",'" + empPhone + "'"
				 	   + ",'" + deptCode + "'"
				 	   + ",'" + jobCode + "'"
				 	   + ",'" + salCode + "'"
				 	   + ",'" + salary + "'"
				 	   + ",'" + bonus + "'"
				 	   + ",'" + managerId + "'"
				 	   + ",'" + "SYSDATE" + "'"
				 	   + ",'" + "" + "'"
				 	   + ",'" + 'Y' + "'" 
				 	   + ")";
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			System.out.println("Driver 접속확인!");
			
			conn = DriverManager.getConnection("jdbc:oracle:thin:@115.90.212.20:10000:XE", "ksky05", "KSKY1234");
			System.out.println("DB서버 접속 성공");
			
			stmt = conn.createStatement();
			System.out.println("Statement 객체 생성");
			
			rset = stmt.executeUpdate(insert);
			System.out.println("SQL문 실행성공!");
			
			if(rset > 0) {
				conn.commit();
			}
			
		} catch(ClassNotFoundException e) {
			e.printStackTrace();
			System.out.println("틀리면 driver쪽 보세요.");
		} catch(SQLException e) {
			e.printStackTrace();
		}

	}

}
